        <ControlTemplate x:Key="MenuItemTemplate2" TargetType="{x:Type MenuItem}">
            <Border x:Name="templateRoot" BorderBrush="{x:Null}" BorderThickness="{TemplateBinding BorderThickness}" Background="#FFFFFFFF" SnapsToDevicePixels="True">
