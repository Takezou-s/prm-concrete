        <!--Menü Ayarları-->
        <ControlTemplate x:Key="MainTabControlMenuButonStyle" TargetType="{x:Type MenuItem}">
            <!--ana menü ayarları-->
            <Border x:Name="templateRoot" BorderBrush="{x:Null}" BorderThickness="{TemplateBinding BorderThickness}" Background="#FFF0F0F0" SnapsToDevicePixels="True">
                <Grid x:Name="Grid" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
