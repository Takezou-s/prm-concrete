<Button x:Class="Promax.UI.CustomTools.PencereButon.TamamButon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Style="{StaticResource WindowButtonStyle}">
    <Button.Content >
        <StackPanel Orientation="Horizontal">
            <Image  Name="BtnImage" Source="/Promax.UI;component/Pictures/Icons/check.png" Width="20" Height="20" Margin="5,5"/>
            <TextBlock Name="BtnText" Text="Tamam" VerticalAlignment="Center" Margin="5,5"/>
        </StackPanel>
    </Button.Content>
</Button>
